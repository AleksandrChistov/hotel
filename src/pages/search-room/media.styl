@import '../../components/header/media.styl'
@import '../../components/footer/media.styl'

@media (max-width: 1200px)
  .container-search
    padding 30px 20px 70px
    max-width 900px
  .filter
    margin-right 35px

@media (max-width: 904px)
  .room-img
    flex-basis 100%
  .room-img-wrap
    justify-content space-around
    max-width 600px
    margin 0 auto
  .room-img__title
    text-align center
    margin-bottom 12px
  .filter-btn, .filter-btn_lg
    display flex
    margin-bottom 15px
  .filter
    display block
    position fixed
    top 0
    left -100%
    z-index 11
    background-color #ffffff
    padding 50px 30px 100px
    height 100%
    box-shadow 0 0 10px rgba(0, 0, 0, 0.6)
    border-radius 3px
    overflow auto
    transition all 0.5s
    max-width 100%
  .filter_active
    left 0
    transition all 0.5s

@media (max-width: 680px)
  .room-img__title
    font-size 22px
  .filter-btn, .filter-btn_lg
    font-size 11px

@media (max-width: 450px)
  .room-img__title
    font-size 20px