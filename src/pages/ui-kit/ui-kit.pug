              txt: "expandable checkbox list", imgArrow: " checkbox_img_arrow", 
              arr: [{value: "checkbox-br", text: "Завтрак", checked: false}]})
            +checkboxList({marginTitle: " text-field__title_margin_bottom", 
              modal: true, cursorTitle: " checkbox_cursor", 
              txt: "expandable checkbox list", imgArrow: " checkbox_img_arrow_transform", 
              arr: [{value: "checkbox-breakfast", text: "Завтрак", checked: false},
              {value: "checkbox-desk", text: "Письменный стол", checked: true},
              {value: "checkbox-feeding-chair", text: "Стул для кормления", checked: true}, 
              {value: "checkbox-crib", text: "Кроватка", checked: true},
              {value: "checkbox-tv", text: "Телевизор", checked: false},
              {value: "checkbox-shampoo", text: "Шампунь", checked: false}]})
          .rich-checkbox
            +richCheckbox({txt: "rich Checkbox Buttons", marginTitle: " text-field__title_margin_bottom", 
              title: " checkbox__span_title_bold",  width: " checkbox_width_266", 
              arr: [{value: "checkbox-wide-corridor", text: "Широкий коридор", descWidth: " checkbox__description_width_203", 
              description: "Ширина коридоров в номере не менее 91 см.", checked: false}, 
              {value: "checkbox-disabled-assistant", text: "Помощник для инвалидов", descWidth: " checkbox__description_width_234", 
              description: "На 1 этаже вас встретит специалист  и проводит до номера.", checked: false}]})
