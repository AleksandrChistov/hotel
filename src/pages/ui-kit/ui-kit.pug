            labelMargin: " radio__label_margin_right"})
          +toggle({marginTitle: " text-field__title_margin_bottom", label: " toggle__label_margin_bottom",
            marginToggle: " toggle_margin_bottom"})
          +likeButton({margin: " checkbox_margin_bottom", marginTitle: " text-field__title_margin_bottom"})
          +rateButton({marginTitle: " text-field__title_margin_bottom"})
        .container-buttons
          +rangeSlider({margin: " checkbox_margin_bottom"})
          +buttons({})
          +pagination({marginTitle: " buttons_margin_bottom_title"})
        .container-dropdown
          .dropdown-group1
            +dropdown({margin: " text-field_margin_bottom_20", id: "accommodations", color: " dropdown__input_color", 
            width: " dropdown__input_width_middle", windowWidth: " dropdown-window_width_middle", widthInput: " dropdown__input_width_middle", 
