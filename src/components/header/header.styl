@import '../small-components/buttons/button-m/button-m.styl'

.header
  background #ffffff
  box-shadow: 0px 10px 20px rgba(31, 32, 65, 0.05)

.header-container
  padding 14px 0
  margin 0 auto
  max-width 1160px
  display flex
  justify-content space-between
  align-items center

.header-menu
  display flex
  align-items center

.header-menu__list
  list-style none
  padding 0
  margin 0
  display flex

.header-menu__item
  margin-right 28px
  display flex
  &:hover
    cursor pointer

.header-menu__item_margin
  margin-right 20px

.header-menu__item:hover .header-menu__link
  color #bc9cff

.header-menu__link, .header-menu__name-person
  text-decoration none
  color rgba(31, 32, 65, 0.5)

.header-menu__link_bold
  font-weight bold
  color rgba(31, 32, 65, 0.75)

.header-menu__arrow
  width 9px
  height 9px
  border-right 2px solid rgba(31, 32, 65, 0.5)
  border-bottom 2px solid rgba(31, 32, 65, 0.5)
  margin 3px 8px 0 8px
  transform rotate(45deg)

.header-menu__arrow_margin_left_0
  margin 3px 0 0 10px

.header-menu__line
  border 0
  width 1px
  height 30px
  background-color rgba(31, 32, 65, 0.1)
  margin-right 30px

.header_position_absolute
  position absolute
  top 0
  left 0
  width 100%
  z-index 1

.header-button-wrap, .header-name-wrap
  display flex
  align-items center

.header__img
  padding-right 20px

.menu-hamburger
  width 28px
  height 19px
  display none
  order 1
  &__line
    width 100%
    height 3px
    background linear-gradient(90deg, #BC9CFF 0%, #8BA4F9 100%)
    display block
    transform rotate(0)
    transition all 0.5s
    &:not(:last-child)
      margin-bottom 5px

.menu-hamburger__close .menu-hamburger__line
  transition all 0.5s
  &:first-child
    transform rotate(-45deg) translate(-6px, 6px)
  &:nth-child(2)
    opacity 0
  &:last-child
    transform rotate(45deg) translate(-5px, -5px)