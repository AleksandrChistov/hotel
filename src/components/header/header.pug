include ../small-components/buttons/button-m/button-m.pug

mixin header(options)
  header(class=`header${options.margin || ""}`)
    div(class="header-container")
      img(src="/img/logo.svg" class="header__img" alt="Logo" id="headerLogo")
      nav(class="header-menu")
        ul.header-menu__list
          each item in options.list
            li(class=`header-menu__item${options.itemMargin || ""}`)
              if item.arrow
                a(class=`header-menu__link${item.bold || ""}` href=`${item.link || "#"}`)= item.text
                span(class=`header-menu__arrow${options.marginArrow || ""}`)
              else
                a(class=`header-menu__link${item.bold || ""}` href=`${item.link || "#"}`)= item.text
        if options.btnText
          +buttonM({text: options.btnText[0], link: `${options.link || "#"}`, style: " button-m_border button-m_height_34 button-m_margin-right"})
          +buttonM({text: options.btnText[1], link: `${options.link2 || "#"}`, style: " button-m_height_34"})
        else
          hr.header-menu__line
          p(class="header-menu__name-person")= options.namePerson