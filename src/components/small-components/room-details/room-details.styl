.room-details__group
  display flex
  flex-wrap wrap
  width 280px
  &:not(:last-child)
    margin-bottom 20px

.room-details__img
  width 48px
  height 48px
  margin-right 10px

.room-details__img_emoticon
  background url(/img/insert_emoticon.svg) center center no-repeat

.room-details__img_city
  background url(/img/location_city.svg) center center no-repeat

.room-details__img_whatshot
  background url(/img/whatshot.svg) center center no-repeat

.room-details__title
  font-weight bold
  color rgba(31, 32, 65, 0.75)
  line-height 24px

.room-details__descr
  color rgba(31, 32, 65, 0.75)
  line-height 24px

.room-details__hr
  flex-basis 100%
  margin 0
  border 0
  height 1px
  background-color rgba(31, 32, 65, 0.1)

.room-details__wrap-text
  padding-bottom 20px