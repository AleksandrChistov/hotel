.sub-field
  width 267px
  position relative
  &:before
    content ""
    width 40px
    height 40px
    position absolute
    bottom 2px
    right 1px
    border-radius 6px
    background url("./img/arrow_forward_gradient.svg") #ffffff center center no-repeat
 
.sub-field:hover:before
  cursor pointer

.sub-field__input
  width 100%
  height 44px
  padding-left 15px
  border-radius 4px
  border 1px solid rgba(31, 32, 65, 0.25)
  &:active, &:focus
    outline none

.sub-field_bottom_20
  margin-bottom 20px

.sub-field__input_color
  color rgba(31, 32, 65, 0.75)
  &:active, &:hover, &:focus
    border 1px solid rgba(31, 32, 65, 0.5)
    &::-webkit-input-placeholder
      color rgba(31, 32, 65, 0.75)
  &::-webkit-input-placeholder
    color rgba(31, 32, 65, 0.25)

.sub-field_width_260
  width 260px