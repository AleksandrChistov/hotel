@import '../date-dropdown/window/window.styl'
@import '../dropdown/dropdown.styl'

.filter-date
  width 266px
  position relative

.filter-date__input
  height 44px
  padding-left 15px
  border-radius 4px
  border 1px solid rgba(31, 32, 65, 0.25)
  background-image url(/img/icon-dropdown.svg)
  background-repeat no-repeat
  background-position 95% 50%
  color rgba(31, 32, 65, 0.75)
  &:active, &:hover, &:focus
    background-image url(/img/icon-dropdown-active.svg)
    outline none

.datepicker_width_middle .datepicker
  width 266px

.datepicker_width_middle .datepicker--cell
  height 32.5px

.datepicker_width_middle .datepicker--cell.datepicker--cell-day.-range-from-.-selected-::after, 
.datepicker_width_middle .datepicker--cell.datepicker--cell-day.-range-to-.-selected-::before, 
.datepicker_width_middle .datepicker--cell.-range-to-.-focus-::before, 
.datepicker_width_middle .datepicker--cell.-range-from-.-focus-::after
  height 32.5px
  width 32.5px