.button-l
  width 320px
  max-width 100%
  height 44px
  background linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%)
  border-radius 22px
  border none
  font-family Montserrat, sans-serif
  text-transform uppercase
  color #ffffff
  font-size 11.5px
  font-weight 500
  letter-spacing 0.65px
  position relative
  &:active, &:focus
    outline none
  &:hover
    cursor pointer
    background linear-gradient(180deg, rgba(188, 156, 255, 0.5) 0%, rgba(139, 164, 249, 0.5) 100%)

.button-l-arrow
  position absolute
  top 0
  right 0
  width 44px
  height 44px
  background url(/img/arrow_forward.svg) center center no-repeat