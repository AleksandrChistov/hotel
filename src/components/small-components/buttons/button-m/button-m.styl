.button-m
  background linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%)
  border-radius 22px
  border none
  padding 2px 2px
  &:active, &:focus
    outline none
  &:hover
    cursor pointer
    background linear-gradient(180deg, rgba(188, 156, 255, 0.5) 0%, rgba(139, 164, 249, 0.5) 100%)

.button-m-text
  font-size 12px
  text-transform uppercase
  font-weight bold
  color #ffffff
  font-family Montserrat, sans-serif

.button-m_border
  background #ffffff
  border-radius 22px
  color #BC9CFF
  line-height 30px
  padding 0 17.5px
  display block

.button-m_bg_gradient
  line-height 30px
  padding 0 17.5px
  display block

.button-m_height_44
  line-height 40px

.button-m_width_95
  width 95px

.button-m-active
  background linear-gradient(180deg, rgba(188, 156, 255, 0.5) 0%, rgba(139, 164, 249, 0.5) 100%)