mixin maskedTextField(options)

  div(class=`text-field${options.marginTop || ""}`)
    if options.state
      p(class="text-field__state")= options.state
    else
    if options.title
      label(class="text-field__title" for="masked-text-field")= options.title
    else
    input(type="text" name="data" id="masked-text-field" class=`text-field__input${options.color || ""}` 
    placeholder=options.placeholder || "ДД.ММ.ГГГГ")