.like-button
  min-width 40px
  height 20px
  border 1px solid rgba(31, 32, 65, 0.25)
  border-radius 10px
  color rgba(31, 32, 65, 0.25)
  position relative
  background #ffffff
  &:hover
    border 1px solid transparent
    color #BC9CFF
    background linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%)
    cursor pointer
  &:active, &:focus
    outline none

.like-button__text
  position absolute
  top 0
  left 0
  width 38px
  height 18px
  border-radius 10px
  background url("/img/like.svg") #ffffff 16% 48% no-repeat
  padding-left 10px
  font-family Montserrat, sans-serif
  font-size 10px
  line-height 17px
  &:hover
    background url("/img/like-active.svg") #ffffff 16% 48% no-repeat

.like-button__text_active
  background url("/img/like-active.svg") #ffffff 16% 48% no-repeat

.like-button_active
  border 1px solid transparent
  color #BC9CFF
  background linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%)

.like-button_margin_right
  margin-right 8px

.like-button_margin
  margin 2px 14px 0 5px