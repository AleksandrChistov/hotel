.block-tag
  display flex
  flex-direction column
  align-items flex-end
  flex-basis 5%
  margin-right 30px
  color rgba(31, 32, 65, 0.25)

.block-text
  display flex
  flex-direction column
  flex-basis 85%
  color #1F2041

.block-tag__tag
  margin 0

.block-text__text
  margin 0
  margin-bottom 50px

.block-tag__tag_size_l
  font-size 24px
  margin-bottom 80px

.block-tag__tag_size_m
  font-size 19px
  margin-bottom 74px

.block-tag__tag_size_s
  font-size 12px
  margin-bottom 50px

.block-text__text_size_l
  font-size 24px
  font-family Quicksand, sans-serif
  font-weight bold

.block-text__text_size_m
  font-size 19px
  font-family Quicksand, sans-serif
  font-weight bold

.block-text__text_size_s
  font-size 12px
  font-family Montserrat, sans-serif
  font-weight bold
  text-transform uppercase

.block-text__text_color_gray
  color rgba(31, 32, 65, 0.75)
  line-height 24px
  max-width 310px