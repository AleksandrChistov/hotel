.date-dropdown-window
  position absolute
  top 70px
  z-index 1
  width 320px

.date-dropdown-window .datepicker
  width 320px
  box-sizing border-box

.date-dropdown-window .datepicker-inline .datepicker
  border 1px solid rgba(31, 32, 65, 0.25)
  box-shadow 0px 10px 20px rgba(31, 32, 65, 0.05)

.date-dropdown-window .datepicker--nav-title
  font-size 19px
  font-family Quicksand, Montserrat, sans-serif
  font-weight bold
  color #1F2041
  &:hover
    background #ffffff

.date-dropdown-window .datepicker--nav-action svg,
.date-dropdown-window .datepicker--nav-action
  width 18px
  height 18px
  &:hover
    background #ffffff

.date-dropdown-window .datepicker--nav-action path
  fill #BC9CFF
  stroke none
  stroke-width 0

.date-dropdown-window .datepicker--nav
  padding 20px 20px 30px
  border-bottom 0

.date-dropdown-window .datepicker--day-name
  font-family Montserrat, sans-serif
  font-weight bold
  font-size 12px
  color #BC9CFF
  text-transform none
  width 40px
  height 40px

.date-dropdown-window .datepicker--content
  padding 0 20px 10px

.date-dropdown-window .datepicker--days-names
  margin 0

.date-dropdown-window .datepicker--cell
  height 40px
  font-family Montserrat, sans-serif
  font-size 12px
  color rgba(31, 32, 65, 0.5)

.date-dropdown-window .datepicker--cell.-focus-,
.date-dropdown-window .datepicker--cell.-selected-,
.date-dropdown-window .datepicker--cell.-selected-.-focus-,
.date-dropdown-window .datepicker--cell.-in-range-.-focus-,
.date-dropdown-window .datepicker--cell.-range-to-,
.date-dropdown-window .datepicker--cell.-range-from-,
.date-dropdown-window .-selected-.datepicker--cell-day.-focus-,
.date-dropdown-window .-selected-.datepicker--cell-day.-other-month-, 
.date-dropdown-window .-selected-.datepicker--cell-year.-other-decade-,
.date-dropdown-window .datepicker--cell.datepicker--cell-day.-other-month-.-range-from-.-selected- 
  background linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%)
  border-radius 22px
  font-weight bold
  color #ffffff
  border none

.date-dropdown-window .datepicker--cell.-selected-.-current-  
  background linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%)
  font-weight bold
  color #ffffff
  border none

.date-dropdown-window .datepicker--cell.-current-.-in-range-
  color #ffffff
  &::before
    content: ""
    width 100%
    height 40px
    position absolute
    left 0
    z-index -1
    background linear-gradient(180deg, rgba(188, 156, 255, 0.25) 0%, rgba(139, 164, 249, 0.25) 100%)

.datepicker--cell.-current-.-in-range-
  color #ffffff

.date-dropdown-window .datepicker--cell.-in-range-,
.date-dropdown-window .-in-range-.datepicker--cell-day.-other-month-, 
.date-dropdown-window .-in-range-.datepicker--cell-year.-other-decade-
  background linear-gradient(180deg, rgba(188, 156, 255, 0.25) 0%, rgba(139, 164, 249, 0.25) 100%)
  color rgba(31, 32, 65, 0.5)

.date-dropdown-window .datepicker--cell.datepicker--cell-day.-range-from-.-selected-::after,
.date-dropdown-window .datepicker--cell.datepicker--cell-day.-range-to-.-selected-::before,
.date-dropdown-window .datepicker--cell.-range-to-.-focus-::before,
.date-dropdown-window .datepicker--cell.-range-from-.-focus-::after
  content: ""
  width 40px
  height 40px
  position absolute
  z-index -1
  background linear-gradient(180deg, rgba(188, 156, 255, 0.25) 0%, rgba(139, 164, 249, 0.25) 100%)

.date-dropdown-window .datepicker--cell.-range-to-::before,
.date-dropdown-window .datepicker--cell.-range-to-.-focus-::before
  border-top-right-radius 22px
  border-bottom-right-radius 22px
  left 0

.date-dropdown-window .datepicker--cell.-range-from-::after,
.date-dropdown-window .datepicker--cell.-range-from-.-focus-::after
  border-top-left-radius 22px
  border-bottom-left-radius 22px
  right 0

.date-dropdown-window .datepicker--cell-day.-other-month-,
.date-dropdown-window .datepicker--cell-year.-other-decade-,
.date-dropdown-window .-in-range-.datepicker--cell-day.-other-month-, 
.date-dropdown-window .-in-range-.datepicker--cell-year.-other-decade-
  color rgba(31, 32, 65, 0.25)

.date-dropdown-window .datepicker--cell.datepicker--cell-day.-range-from-,
.date-dropdown-window .datepicker--cell.datepicker--cell-day.-range-to-
  border-color none

.date-dropdown-window .datepicker--cell.-current-
  background linear-gradient(180deg, #6FCF97 0%, #66D2EA 100%)
  border-radius 22px
  font-weight bold
  color #ffffff

.date-dropdown-window .datepicker .datepicker--buttons
  display flex
  justify-content space-between
  border 0
  padding 0 20px 10px

.date-dropdown-window .datepicker .datepicker--button
  flex 0
  font-family Montserrat, sans-serif
  font-size 12px
  font-weight bold
  text-transform uppercase
  color #BC9CFF
  &:hover
    background #ffffff
    cursor pointer

.date-dropdown-window .datepicker .datepicker--button[data-action="clear"]
  color rgba(31, 32, 65, 0.5)
  order -1