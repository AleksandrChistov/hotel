include ./window/window.pug

mixin dateDropdown(options)
  div(class=`date-dropdown${options.margin || ""}${options.width || ""}`)
    div(class="date-dropdown__from")
      if options.title1
        label(class="dropdown__title" for=options.id1)= options.title1
      else
      input(type='text' class="date-dropdown__input dropdown__input_color dropdown__input_width_small"
      name="date-dropdown" id=options.id1 value=`${options.value1 || "ДД.ММ.ГГГГ"}`)
    div(class="date-dropdown__to")
      if options.title2
        label(class="dropdown__title" for=options.id2)= options.title2
      else
      input(type='text' class="date-dropdown__input dropdown__input_color dropdown__input_width_small"
      name="date-dropdown" id=options.id2 value=`${options.value2 || "ДД.ММ.ГГГГ"}`)
    +dateDropdownWindow({baseClass: " date-dropdown-window dropdown-window_display_none"})
    